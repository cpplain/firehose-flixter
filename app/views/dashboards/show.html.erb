<br />

<div class="booyah-box col-10 offset-1">
  <h1>What I'm learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <div class="col-12 col-sm-10 offset-sm-1 text-center">
      <%= image_tag course.image, class: 'img-fluid' %>
    </div>
    <br />
    <div class="row">
      <div class="col-12 col-sm-7 offset-sm-1">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-3 text-right">
        <%= link_to 'More info', course_path(course), class: 'btn btn-primary' %>
      </div>
    </div>
    <hr class="col-8 offset-2">
    <br class="clear" />
  <% end %>

  <h1>What I'm teaching</h1>
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <div class="col-12 col-sm-10 offset-sm-1 text-center">
      <%= image_tag course.image, class: 'img-fluid' %>
    </div>
    <br />
    <div class="row">
      <div class="col-12 col-sm-7 offset-sm-1">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-3 text-right">
        <%= link_to 'More info', course_path(course), class: 'btn btn-primary' %>
      </div>
    </div>
    <hr class="col-8 offset-2">
    <br class="clear" />
  <% end %>
</div>
