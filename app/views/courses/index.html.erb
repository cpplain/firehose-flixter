<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

  <% @courses.each do |course| %>
    <h2 class="text-center"><%= course.title %></h2>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to 'Button', '#', class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <br class="clear" />
  <% end %>
</div>
